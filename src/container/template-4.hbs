<header class="header">
    <div class="">
        {{> logo data="L"}}
    </div>

    <nav class="header_nav">
        <div class="header_nav_right">
            {{> nav list=header}}
        </div>
    </nav>
</header>

{{#with main}}
<div class="main">
    <img src="{{image}}" alt="Main image" class="main_image">
    <div class="main_content">
        <h1 class="main_title">{{heading}}</h1>
        <p class="main_text">{{descriotion}}</p>
        <div class="main_action">
            <a class="button main_button" href="{{href}}">{{button}}</a>
        </div>
    </div>
</div>
{{/with}}

<main class="featured">
    {{#each featured}}
    {{> cardFeatured data=this}}
    {{/each}}
</main>


<div class="actions">
    {{#each actions}}
    <div class="actions_content">
        <div class="actions_title">{{heading}}</div>
        <div>
            <a class="button actions_button" href="{{url}}">{{text}}</a>
        </div>
    </div>

    {{/each}}
</div>



<footer class="footer">
    <div>
        {{> logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>

    {{#each footer}}
    <div>
        <span class="footer_title">{{title}}</span>
        {{> nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>